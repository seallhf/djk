<?xml version="1.0" encoding="utf-8"?>  


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
        android:id="@+id/Usualscroll"
  	    android:layout_width="match_parent"
  	    android:layout_height="match_parent"
  	    android:fillViewport="true" 
  	    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/UsualtextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:text="1、本局山洪灾害系统网址"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_margin="10dp"
            android:text="2、浪河水库安全系统平台（该站经常不能登录）"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="3、官山水库安全系统视频平台"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="4、十堰市气象局网址(该站只有给与授权IP网址才能登录)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="5、湖北公众信息网址"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="6、中央气象台1-3天预报"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="7、本局水务防汛网址"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/UsualtextView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="8、长江水情网址"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

</ScrollView>